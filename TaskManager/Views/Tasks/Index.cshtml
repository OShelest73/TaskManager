@model IEnumerable<TaskModel>

@{
    ViewData["Title"] = "Tasks";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        @if (Model?.Count() > 0)
        {
            <form class="form-check-inline my-2 my-lg-0" style="display: flex;">
                <input name="searchString" type="text" class="form-control" placeholder="Найти по названию или описанию"/>
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
            </form>

            <div class="col-md-4 col-xl-3">
                <div class="categories">
                    <span class="text-uppercase fw-bold">Category</span>

                    @Html.ActionLink("Reset filter", "Index", new{statusId = TempData["sortStatus"]})
                    
                    @foreach (var category in ViewBag.Categories)
                    {
                        @Html.ActionLink($"{category.CategoryName}", "Index", new{categoryId = category.Id, statusId = TempData["sortStatus"]})
                    }
                </div>
                <div class="statuses">
                    <span class="text-uppercase fw-bold">Status</span>
                    
                    @Html.ActionLink("Reset filter", "Index", new{categoryId = TempData["sortCategory"]})

                    @foreach (var status in ViewBag.Statuses)
                    {
                        @Html.ActionLink($"{status.StatusName}", "Index", new{statusId = status.Id, categoryId = TempData["sortCategory"]})
                    }
                </div>
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.TaskName)</th>
                        <th>@Html.DisplayNameFor(model => model.Status)</th>
                        <th>@Html.DisplayNameFor(model => model.Category)</th>
                        <th>@Html.DisplayNameFor(model => model.FinishDate)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.TaskName)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Status.StatusName)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Category.CategoryName)
                            </td>
                            <td class="align-middle">
                                <div>Finish time/date: @item.FinishDate.ToLocalTime().ToString("HH:mm\\/dd.MM")</div>
                            </td>
                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-controller="Tasks" asp-action="Details" asp-route-id="@item.Id" asp-route-workspace="@ViewBag.Workspace"><i class="bi bi-pencil-square"></i>Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div>There are no tasks in this workspace</div>
        }
    </div>
    @if (ViewBag.Role == "Manager")
    {
        <div>
            <a class="btn btn-outline-primary" asp-controller="Workspaces" asp-action="InviteUsers" asp-route-workspace="@ViewBag.Workspace">Add users to workspace</a>
        </div>
        <div>
            <a class="btn btn-outline-primary" asp-controller="Workspaces" asp-action="RemoveUsers" asp-route-workspace="@ViewBag.Workspace">Remove users from workspace</a>
        </div>
    }
    <div style="position: fixed; left: 30px; bottom: 50px;" class="text-white">
        <a asp-controller="Tasks" asp-action="Create" asp-route-workspace="@ViewBag.Workspace">Add new</a>
    </div>
</div>