@model List<NotificationModel>

@{
    ViewData["Title"] = "Оповещения";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Время/Дата отправки</th>
                    <th>Просмотрено</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td class="align-middle">
                            <div>@item.CreationDate.ToLocalTime().ToString("HH:mm\\/dd.MM")</div>
                        </td>
                        <td class="align-middle">
                            <input asp-for="@item.IsChecked" value="@item.IsChecked" disabled="disabled"/>
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Просмотреть </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="text-white">
        <a asp-action="DeleteChecked" class="btn btn-success">Удалить просмотренные</a>
    </div>
</div>


