@model TaskManager.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Редактировать информацию";
}

<h1 class="page-heading" text-uppercase mb-4>Редактировать профиль</h1>

<div class="row text">
    <div class="col-md-8 offset-2">
        <div class="col-md-8 offset-2">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-2">
                    <p>Вы редактируете: @Model.EmailAddress</p>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control"/>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    @Html.DropDownListFor(m => m.Category, ViewBag.Categories as SelectList)
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" asp-action="Edit" value="Изменить" class="btn btn-main float-right"/>
                    <a class="btn btn-main" asp-action="Index" asp-route-id="@Model.EmailAddress">Все пользователи</a>
                </div>
            </form>
        </div>
    </div>
</div>