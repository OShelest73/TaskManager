@model IEnumerable<UserModel>

@{
    ViewData["Title"] = "Список пользователей";
}

<h1 class="page-heading text-uppercase mb-4">Пользователи</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="element-entry">
            <div class="element-entry-text">
                <div class="task-text">
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </div>
                <div class="user-info">
                    @Html.DisplayFor(modelItem => item.FullName)
                </div>
                <div class=user-info>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </div>
            </div>

            <div class="element-entry-actions align-middle">
                <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.EmailAddress">Детали </a>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.EmailAddress">Редактировать </a>
                <a class="btn btn-outline-danger" asp-action="DeleteConfirm" asp-route-id="@item.EmailAddress">Удалить </a>
            </div>
        </div>
    }
</div>

<div style="position: fixed; right: 30px; bottom: 30px;" class="text-white">
    <a asp-controller="Users" asp-action="Register" class="btn btn-main">Зарегистрировать</a>
</div>