@model IEnumerable<UserModel>

@{
    ViewData["Title"] = "List of users";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.EmailAddress)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Category.CategoryName)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.EmailAddress)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Category.CategoryName)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.EmailAddress"><i class="bi bi-eye"></i>Details </a>
                            <a class="btn btn-outline-danger" asp-action="DeleteConfirm" asp-route-id="@item.EmailAddress"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div style="position: fixed; right: 30px; bottom: 30px;" class="text-white">
    <a asp-controller="Users" asp-action="Register" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add new</a>
</div>