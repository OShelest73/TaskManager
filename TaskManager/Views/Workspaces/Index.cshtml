@model IEnumerable<WorkspaceModel>

@{
    ViewData["Title"] = "Your workspaces";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.WorkspaceName)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.WorkspaceName)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="Tasks" asp-action="Index" asp-route-workspace="@item.Id"><i class="bi bi-pencil-square"></i>Open</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div style="position: fixed; right: 30px; bottom: 30px;" class="text-white">
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add new</a>
</div>