@model WorkspaceModel

@{
    ViewData["Title"] = "Create workspace";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a new workspace</h1>
        </p>
        <div class="row text">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="WorkspaceName" class="control-label"></label>
                        <input asp-for="WorkspaceName" class="form-control"/>
                        <span asp-validation-for="WorkspaceName" class="text-danger"></span>
                    </div>                    
                    <div class="form-group">
                        <input type="submit" asp-action="Create" value="Create" class="btn btn-outline-success float-right"/>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>